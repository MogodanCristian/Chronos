<Page x:Class="ChronosClient.Screens.PlanScreen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ChronosClient.Screens"
      xmlns:components="clr-namespace:ChronosClient.Components"
      xmlns:views="clr-namespace:ChronosClient.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PlanScreen">

    <Grid>
    <Button Width="100" Height="30" Content="Add New Bucket" Click="Button_Click" HorizontalAlignment="Center" VerticalAlignment="Top"></Button>
        <WrapPanel Name="plan_screen_grid"  Margin="0,50,0,0">
            <ScrollViewer HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Disabled">
                <views:BucketView x:Name="BucketPanelView"/>
            </ScrollViewer>
        </WrapPanel>
    </Grid>
</Page>
